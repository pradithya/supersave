<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.progrema.supersave" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Supersave.AppTheme" >
        <activity
            android:name="com.progrema.supersave.ui.activities.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.progrema.supersave.ui.activities.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.progrema.supersave.ui.activities.MainActivity"
            android:label="@string/app_name" >
        </activity>


        <provider
            android:name="com.progrema.supersave.data.db.SupersaveProvider"
            android:authorities="com.progrema.supersave" />

    </application>

</manifest>
